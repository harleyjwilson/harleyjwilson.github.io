---
import Social from "../components/Social.astro";
import Layout from "../layouts/PageLayout.astro";
---

<Layout title="Harley Wilson">
    <section class="py-4">
        <div class="pb-8">
            <img
                src="/images/profile.jpeg"
                alt="Profile"
                width="125px"
                height="125px"
                class="mx-auto rounded-full transition ease-in-out duration-300 hover:brightness-110 hover:shadow-lg"
            />
        </div>
        <h1 class="pb-4 font-sans text-4xl font-bold text-center text-gray-800">
            Harley Wilson
        </h1>
        <p
            class="pb-4 text-lg font-light tracking-[0.01rem] text-center text-gray-600"
        >
            Software Engineering Student
        </p>
    </section>
    <Social />
</Layout>
