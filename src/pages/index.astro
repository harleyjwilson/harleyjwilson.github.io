---
import BaseHead from "../components/BaseHead.astro";
import Social from "../components/Social.astro";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title="Harley Wilson" />
  </head>
  <body class="mx-auto flex flex-col bg-gray-50">
    <main class="pt-28 px-4">
      <section class="py-4">
        <div class="pb-8">
          <img
            src="/images/profile.jpeg"
            width="125px"
            height="125px"
            class="mx-auto rounded-full transition ease-in-out duration-300 hover:brightness-110 hover:shadow-lg"
          />
        </div>
        <h1 class="pb-4 font-sans text-4xl font-bold text-center text-gray-800">
          Harley Wilson
        </h1>
        <p
          class="pb-4 text-lg font-light tracking-[0.01rem] text-center text-gray-600"
        >
          Software Engineering Student
        </p>
      </section>
      <Social />
      <Footer />
    </main>
  </body>
</html>
