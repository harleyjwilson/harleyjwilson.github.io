---
export interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time
  class="hidden md:block text-gray-500 basis-24 md:basis-32"
  datetime={date.toISOString()}
>
  {
    date.toLocaleDateString("en-au", {
      year: "numeric",
      month: "short",
      day: "2-digit",
    })
  }
</time>
<time
  class="block md:hidden text-gray-500 basis-24 md:basis-32"
  datetime={date.toISOString()}
>
  {
    date.toLocaleDateString("en-au", {
      year: "2-digit",
      month: "short",
    })
  }
</time>
